        }
        .success { border-left: 4px solid #28a745; background: #d4edda; }
        .warning { border-left: 4px solid #ffc107; background: #fff3cd; }
        .error { border-left: 4px solid #dc3545; background: #f8d7da; }
        .test-result {
            margin: 10px 0;
            padding: 10px;
            border-radius: 4px;
            font-family: monospace;
        }
        .btn {
            background: #ff6136;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            margin: 5px;
        }
        .btn:hover { background: #e55a2e; }
        iframe {
            width: 100%;
            height: 600px;
            border: 2px solid #ff6136;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <h1>ğŸ§ª Test Final - Fire Salamander CorrigÃ©</h1>
    
    <div class="test-container success">
        <h3>âœ… Status: CORRECTION APPLIQUÃ‰E</h3>
        <p>Fire Salamander a Ã©tÃ© recompilÃ© avec:</p>
        <ul>
            <li>Chart.js replacement CSS-only</li>
            <li>Error logger amÃ©liorÃ©</li>
            <li>Gestion des promesses vides</li>
        </ul>
    </div>

    <div class="test-container">
        <h3>ğŸ”§ Actions de Test</h3>
        <button class="btn" onclick="testInterface()">Test Interface</button>
        <button class="btn" onclick="testHeightMonitoring()">Test Hauteur</button>
        <button class="btn" onclick="openDirectInterface()">Ouvrir Direct</button>
        <button class="btn" onclick="showErrorStats()">Stats Erreurs</button>
    </div>

    <div id="test-results"></div>

    <div class="test-container">
        <h3>ğŸ”¥ Fire Salamander - Version CorrigÃ©e</h3>
        <iframe id="fire-salamander" src="http://localhost:8080"></iframe>
    </div>

    <script>
        let heightCheckInterval;
        
        function testInterface() {
            const results = document.getElementById('test-results');
            results.innerHTML = '<div class="test-result warning">ğŸ”„ Test en cours...</div>';
            
            fetch('http://localhost:8080/api/v1/health')
                .then(response => response.json())
                .then(data => {
                    results.innerHTML = `
                        <div class="test-result success">
                            âœ… API Health: ${data.status}<br>
                            ğŸ”§ Service: ${data.service}<br>
                            ğŸ“… Timestamp: ${data.timestamp}
                        </div>
                    `;
                })
                .catch(error => {
                    results.innerHTML = `<div class="test-result error">âŒ Erreur API: ${error.message}</div>`;
                });
        }
        
        function testHeightMonitoring() {
            const results = document.getElementById('test-results');
            const iframe = document.getElementById('fire-salamander');
            
            if (heightCheckInterval) {
                clearInterval(heightCheckInterval);
            }
            
            let checkCount = 0;
            heightCheckInterval = setInterval(() => {
                checkCount++;
                try {
                    const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                    const height = Math.max(
                        iframeDoc.body.scrollHeight,
                        iframeDoc.body.offsetHeight,
                        iframeDoc.documentElement.scrollHeight
                    );
                    
                    const status = height > 10000 ? 'error' : 'success';
                    const icon = height > 10000 ? 'ğŸš¨' : 'âœ…';
                    
                    results.innerHTML = `
                        <div class="test-result ${status}">
                            ${icon} Hauteur Check #${checkCount}: ${height.toLocaleString()}px<br>
                            ğŸ¯ Seuil critique: 10,000px<br>
                            ğŸ“Š Status: ${height > 10000 ? 'PROBLÃˆME DÃ‰TECTÃ‰' : 'NORMAL'}
                        </div>
                    `;
                    
                    if (checkCount >= 10) {
                        clearInterval(heightCheckInterval);
                        results.innerHTML += '<div class="test-result success">âœ… Test terminÃ© - Aucun problÃ¨me dÃ©tectÃ©!</div>';
                    }
                } catch (error) {
                    results.innerHTML = `<div class="test-result warning">âš ï¸  Check #${checkCount}: Iframe non accessible (normal)</div>`;
                }
            }, 1000);
        }
        
        function openDirectInterface() {
            window.open('http://localhost:8080', '_blank');
        }
        
        function showErrorStats() {
            const results = document.getElementById('test-results');
            
            if (typeof window.getFireSalamanderStats === 'function') {
                const stats = window.getFireSalamanderStats();
                results.innerHTML = `
                    <div class="test-result success">
                        ğŸ“Š Stats Error Logger:<br>
                        - Total Erreurs: ${stats.totalErrors}<br>
                        - Hauteur Actuelle: ${stats.currentHeight}px<br>
                        - Hauteur Max: ${stats.maxHeightReached}px<br>
                        - DurÃ©e Session: ${Math.round(stats.sessionDuration/1000)}s
                    </div>
                `;
            } else {
                results.innerHTML = '<div class="test-result warning">âš ï¸  Error Logger pas encore chargÃ©</div>';
            }
        }
        
        // Auto-test au chargement
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                testInterface();
            }, 2000);
            
            setTimeout(() => {
                testHeightMonitoring();
            }, 5000);
        });
        
        // Monitor iframe messages
        window.addEventListener('message', function(event) {
            if (event.data.type === 'fire-salamander-loaded') {
                const results = document.getElementById('test-results');
                results.innerHTML += `
                    <div class="test-result success">
                        ğŸ“Š Fire Salamander ChargÃ©:<br>
                        - Charts CSS CrÃ©Ã©s: ${event.data.chartsCreated}<br>
                        - Risque Boucle Infinie: ${event.data.infiniteLoopRisk ? 'ğŸš¨ OUI' : 'âœ… NON'}
                    </div>
                `;
            }
        });
    </script>
</body>
</html>