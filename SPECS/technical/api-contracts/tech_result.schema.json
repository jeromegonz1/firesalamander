{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://firesalamander.septeo.com/schemas/tech_result.json",
  "title": "Technical Audit Result",
  "description": "Schema for technical audit results",
  "type": "object",
  "properties": {
    "audit_id": {
      "type": "string"
    },
    "model_version": {
      "type": "string",
      "pattern": "^tech-v\\d+\\.\\d+$"
    },
    "scores": {
      "type": "object",
      "properties": {
        "performance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "accessibility": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "best_practices": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "seo": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["performance", "accessibility", "best_practices", "seo"],
      "additionalProperties": false
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "message": {"type": "string"},
          "evidence": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["id", "severity", "message", "evidence"]
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "severity": {
            "type": "string",
            "enum": ["medium", "low"]
          },
          "message": {"type": "string"},
          "evidence": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["id", "severity", "message", "evidence"]
      }
    },
    "mesh": {
      "type": "object",
      "properties": {
        "orphans": {
          "type": "array",
          "items": {"type": "string"}
        },
        "depth_stats": {
          "type": "object",
          "properties": {
            "min": {"type": "integer"},
            "max": {"type": "integer"},
            "avg": {"type": "number"}
          },
          "required": ["min", "max", "avg"]
        },
        "weak_anchors": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["orphans", "depth_stats", "weak_anchors"]
    }
  },
  "required": ["audit_id", "model_version", "scores", "findings", "warnings", "mesh"],
  "additionalProperties": false
}